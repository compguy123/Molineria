WindowManager:
    Homepage:
    InsertUser:
    ShowUser:

<Button>:
    font_size:'15sp'
    color:.3,.6,.7,1
    size_hint: (0.15,0.1)
    background_normal: ''
    background_color:(255/255, 240/255, 0, 1)
    color: (13/255,135/255,13/255,1)

<Homepage>:
    name: "Homepage"

    FloatLayout:

        Button:
            pos_hint:{"x":.7, "top":.4}
            text: "New User"
            on_press:
                app.root.current= "InsertUser"
                root.manager.transition.direction = "left"


        Button:
            text: "Existing User"
            pos_hint:{"x":.7, "top":.6}

        Image:
            source:"molineria.png"
            size_hint: (0.5,1)
            pos_hint:{"x":0, "top":1}

        Label:
            text:"MOLINERIA"
            pos_hint:{"x":.7, "top":.8}
            size_hint: (0.15,0.1)
            font_size:'50sp'
            font_name:'comic'
            color: 13/255,135/255,13/255,1

<InsertUser>:
    name: "InsertUser"

    firstName: firstName
    lastName: lastName

    Button:
        text: "Cancel"
        pos_hint:{"x":.45, "top":.2}
        on_press:
            root.homepage()
            root.reset()
            root.manager.transition.direction = "right"

    Button:
        text: "Create User"
        pos_hint:{"x":.45, "top":.35}
        on_press:
            root.manager.transition.direction = "left"
            root.createUser()


    Label:
        text:"Create A User"
        pos_hint:{"x":.45, "top":.9}
        size_hint: (0.15,0.1)
        font_size:'50sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    Label:
        text:"First Name: "
        pos_hint:{"x":.15, "top":.7}
        size_hint: (0.1,0.1)
        font_size:'30sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    Label:
        text:"Last Name: "
        pos_hint:{"x":.15, "top":.5}
        size_hint: (0.1,0.1)
        font_size:'30sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    TextInput:
        id: firstName
        pos_hint: {"x":0.33, "top":.7}
        size_hint: 0.4, 0.1
        multiline: False
        font_size: (root.width**2 + root.height**2) / 14**4

    TextInput:
        id: lastName
        pos_hint: {"x":0.33, "top":.5}
        size_hint: 0.4, 0.1
        multiline: False
        font_size: (root.width**2 + root.height**2) / 14**4

<ShowUser>:
    name: "ShowUser"

    Label:
        text:"userPage"
        pos_hint:{"x":.7, "top":.8}
        size_hint: (0.15,0.1)
        font_size:'50sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1