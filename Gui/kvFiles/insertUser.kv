<Button>:
    font_size:'15sp'
    color:.3,.6,.7,1
    size_hint: (0.15,0.1)
    background_normal: ''
    background_color:(255/255, 240/255, 0, 1)
    color: (13/255,135/255,13/255,1)


<InsertUser>:
    name: "InsertUser"

    userName: name
    comments: comments
    dob: DOB

    Button:
        text: "Cancel"
        pos_hint:{"x":.55, "top":.2}
        on_press:
            app.root.current= "Homepage"
            root.manager.transition.direction = "right"

    Button:
        text: "Create User"
        pos_hint:{"x":.35, "top":.2}
        on_press:
            root.manager.transition.direction = "left"
            app.root.current="ShowUser" if root.createUser() else root.invalidUser()



    Label:
        text:"Create A User"
        pos_hint:{"x":.45, "top":1}
        size_hint: (0.15,0.1)
        font_size:'50sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    Label:
        text:"Name: "
        pos_hint:{"x":.15, "top":.8}
        size_hint: (0.1,0.1)
        font_size:'30sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    Label:
        text:"Comments: "
        pos_hint:{"x":.15, "top":.6}
        size_hint: (0.1,0.1)
        font_size:'30sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    TextInput:
        id:name
        pos_hint: {"x":0.33, "top":.8}
        size_hint: 0.4, 0.1
        multiline: False
        font_size: (root.width**2 + root.height**2) / 14**4

    Label:
        text:"DOB \n(YYYY-MM-DD): "
        pos_hint:{"x":.15, "top":.4}
        size_hint: (0.1,0.1)
        font_size:'25sp'
        font_name:'comic'
        color: 13/255,135/255,13/255,1

    TextInput:
        id: comments
        pos_hint: {"x":0.33, "top":.6}
        size_hint: 0.4, 0.1
        multiline: False
        font_size: (root.width**2 + root.height**2) / 14**4

    TextInput:
        id:DOB
        pos_hint: {"x":0.33, "top":.4}
        size_hint: 0.4, 0.1
        multiline: False
        font_size: (root.width**2 + root.height**2) / 14**4
